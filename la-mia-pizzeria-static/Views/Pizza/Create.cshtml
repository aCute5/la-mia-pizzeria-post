@model PizzaModel

@{
    var pizzas = Model;
}

<h1>New Pizza</h1>

<div class="container">
    <div class="pad">
        <form method="post" asp-controller="PizzaController" asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="form-field">
                <label asp-for="Nome">Title</label>
                <input asp-for="Nome" />
                <span asp-validation-for="Nome" class="text error"></span>
            </div>
            <div class="form-field">
                <label asp-for="Descrizione">Description</label>
                <textarea asp-for="Descrizione"></textarea>
                <span asp-validation-for="Descrizione" class="text error"></span>
            </div>
            <div class="form-field">
                <label asp-for="Price">Image source</label>
                <input asp-for="Price" />
                <span asp-validation-for="Price" class="text error"></span>
            </div>
            <button type="submit">Create</button>
        </form>
    </div>

</div>